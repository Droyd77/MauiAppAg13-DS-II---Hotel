<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppAg13_DS_II___Hotel.views.ContratacaoHospedagem"
             Title="ContratacaoHospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="Beige">
    
    <VerticalStackLayout VerticalOptions="Center" Padding="10">
        <Label 
            Text="Cálculo da Diária"
            FontFamily="Bauhaus-93Regular" FontSize="45" TextColor="Red" />
       
        <Frame Padding="10">
            <VerticalStackLayout>
                <Grid RowDefinitions="Auto, Auto"
                      ColumnDefinitions="*, *, 2*">
                    
                    <Label Grid.Row="0" Grid.Column="0"
                           Text="Adultos: " />

                    <Label Grid.Row="0" Grid.Column="1"
                           TextColor="Violet"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_adultos}"/>

                    <Stepper Grid.Row="0" Grid.Column="2"
                             x:Name="stp_adultos"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" />

                    <Label Grid.Row="1" Grid.Column="0"
                           Text="Crianças:"/>

                    <Label Grid.Row="1" Grid.Column="1"
                           TextColor="Violet" 
                           Text="{Binding Value}"       
                           BindingContext="{x:Reference stp_crianças}"/>
                    <Stepper Grid.Row="1" Grid.Column="2"
                               x:Name="stp_crianças"
                               Minimum="0"
                               Maximum="10"
                               Increment="1" />
                </Grid>

                <Label Text="Escolha sua Suite"  />
                
                <Picker x:Name="pck_quarto"
                        Title="Serlecione sua Acomodação"/>
                <Frame Padding="10" 
                       Margin="10">

                    <VerticalStackLayout>
                        <Label Text="Periodo da Estadia"/>
                        
                        <HorizontalStackLayout>
                            <Label Text="Check-in:" />
                            <DatePicker x:Name="dtpck_chechin"
                                         Format="dd/MM/yyyy"/>                            
                        </HorizontalStackLayout>
                        
                        <HorizontalStackLayout>
                            <Label Text="Check-out:" />
                            <DatePicker x:Name="dtpck_chechout"
                                         Format="dd/MM/yyyy"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                                      
                    
                </Frame>
                
                <Button Text="Avançar" />
                

            </VerticalStackLayout>  
            
        </Frame>
        <Button Text="Sobre" />
        
        
    </VerticalStackLayout>
    
</ContentPage>